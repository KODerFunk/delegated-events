{
  "name": "delegated-events",
  "version": "2.0.0",
  "description": "A small, fast delegated event library.",
  "license": "MIT",
  "repository": "dgraham/delegated-events",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist build types",
    "lint": "tslint delegated-events.ts test/*.ts",
    "bootstrap": "git submodule update --init && npm install",
    "prebuild": "npm run clean && npm run lint",
    "build": "rollup -c && cp types/delegated-events.d.ts dist/index.d.ts && cp delegated-events.js.flow dist/index.esm.js.flow && cp delegated-events.js.flow dist/index.umd.js.flow",
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "prebrowser": "npm run clean && npm run lint && rollup -c rollup.config.test.js",
    "browser": "open \"file://$(pwd)/test/test.html\"",
    "prebench": "npm run clean && rollup -c rollup.config.bench.js",
    "bench": "open \"file://$(pwd)/test/bench.html\"",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "selector-set": "^1.1.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jquery": "^3.3.29",
    "@types/karma-chai": "^0.1.1",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "karma": "^4.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^4.0.0",
    "mocha": "^6.0.0",
    "rollup": "^1.2.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.19.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333"
  },
  "files": [
    "dist"
  ]
}
